{
    "name": "@rango-team/nest-boilerplate",
    "version": "0.0.1",
    "description": "The boilerplate for GraphQL and Nest.js applications",
    "keywords": [],
    "author": "Rango",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "https://github.com/rango-team/nest-boilerplate"
    },
    "scripts": {
        "prepare": "husky install",
        "start": "dotenv -e .env.development -- nest start --watch",
        "start:prod": "dotenv -e .env.production -- node dist/main",
        "start:debug": "dotenv -e .env.development -- nest start --debug --watch",
        "test": "jest",
        "test:mutate": "stryker run",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "build": "nest build",
        "prebuild": "rimraf dist",
        "p:gen": "npx prisma generate",
        "p:mig": "dotenv -e .env.development -- npx prisma migrate dev",
        "p:val": "dotenv -e .env.development -- npx prisma validate dev",
        "format": "prettier --write .",
        "check-lint": "eslint src --ext ts",
        "check-format": "prettier --check .",
        "check-types": "tsc --pretty --noEmit"
    },
    "dependencies": {
        "@apollo/subgraph": "^2.1.3",
        "@nestjs/apollo": "^10.1.3",
        "@nestjs/common": "^9.1.2",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.1.2",
        "@nestjs/graphql": "^10.1.3",
        "@nestjs/platform-express": "^9.1.2",
        "@prisma/client": "^4.4.0",
        "@rango-team/exceptions": "^0.0.3",
        "@rango-team/localizations": "^0.0.3",
        "@rango-team/utils": "^0.0.2",
        "@rango-team/validations": "^0.0.2",
        "apollo-server-core": "^3.10.2",
        "apollo-server-express": "^3.10.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "graphql": "^16.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.7"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.5.0",
        "@nestjs/cli": "^9.1.4",
        "@nestjs/schematics": "^9.0.3",
        "@nestjs/testing": "^9.1.2",
        "@stryker-mutator/core": "^6.2.2",
        "@stryker-mutator/jest-runner": "^6.2.2",
        "@stryker-mutator/typescript-checker": "^6.2.2",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.1.1",
        "@types/node": "^18.7.23",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "^29.1.2",
        "prettier": "^2.7.1",
        "prisma": "^4.4.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.2.4",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.8.4"
    }
}
